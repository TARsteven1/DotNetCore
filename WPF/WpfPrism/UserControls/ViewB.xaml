<UserControl x:Class="WpfPrism.UserControls.ViewB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPrism.UserControls" xmlns:viewmodels="clr-namespace:WpfPrism.ViewModels"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.DataContext>
		<viewmodels:ViewAViewModel/>
	</UserControl.DataContext>
	<Grid Background="BlueViolet">
		<TextBlock FontSize="55" Text="{Binding Txt}" />
	</Grid>
</UserControl>
