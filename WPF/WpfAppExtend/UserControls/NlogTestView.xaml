<UserControl x:Class="WpfAppExtend.UserControls.NlogTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppExtend.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<WrapPanel >
			<TextBlock Text="本功能已放入构造函数中" FontSize="33"/>
			<TextBlock Text="使用前须引入，Nlog包和NlogConfig包" FontSize="33"/>
			<TextBlock Text="在Nlog.Config中配置异常输出设置    " FontSize="33"/>
			<TextBlock Text="并在功能类中声明" FontSize="33"/>
			<TextBlock Text="private static readonly NLog.Logger logger = NLog.LogManager.GetCurrentClassLogger();" FontSize="18"/>
			<TextBlock Text="同时在异常捕获时将异常信息 logger.Info(e); 输出" FontSize="33"/>

		</WrapPanel>
	</Grid>
</UserControl>
