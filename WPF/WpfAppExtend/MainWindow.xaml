<Window x:Class="WpfAppExtend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppExtend" xmlns:usercontrol="clr-namespace:WpfAppExtend.UserControl"
		mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<TabControl Height="420" Margin="0,0,-0.4,0" >
			<TabItem Header="Adorner">
				<usercontrol:Adornor/>
			</TabItem>
			<TabItem Header="Converter">
				<usercontrol:Converter/>
			</TabItem>			
			<TabItem Header="Behavior">
				<usercontrol:Behavior/>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
